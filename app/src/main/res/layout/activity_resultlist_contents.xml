<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    tools:context=".result">

    <ImageView
        android:id="@+id/disimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/disname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/app_font"
        android:text="TextView"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/disdata"
        app:layout_constraintStart_toEndOf="@+id/disimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/disdata"
        android:layout_width="134dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/app_font"
        android:maxLength="20"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/disdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/disname"
        app:layout_constraintTop_toBottomOf="@+id/disname" />

    <TextView
        android:id="@+id/disdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/app_font"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/disname"
        app:layout_constraintTop_toBottomOf="@+id/disdata" />

</androidx.constraintlayout.widget.ConstraintLayout>